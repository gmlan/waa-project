<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="edu.mum.cs545.lms.domain"> 
    <class name="User" table="t_user">
        <id name="userId" column="id">
                <generator class="uuid" />
        </id> 
        <property name="firstName" column="col_firstName"></property>
        <property name="lastName" column="col_lastName"></property>
        <property name="email" column="col_email"></property>		
    </class>
</hibernate-mapping>
